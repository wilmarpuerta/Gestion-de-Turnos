@{
    ViewData["Title"] = "Crear Usuario";
}

<div class="container-fluid">
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col text-center p-4">
            <h1>Crear Usuario</h1>
        </div>
        <hr class="text-dark">
    </div>
</div>

@model Usuario
<div class="container ">
    <div class="row d-flex justify-content-center align-items-center">
        <form asp-controller="Usuarios" asp-action="Add" method="post" class="card col-8 mt-3">
            <div class="card-body">
                <div class="form-grup mb-4 row">
                    <div class="col-6">
                        <label asp-for="Nombre"></label>
                        <input class="form-control" asp-for="Nombre">
                    </div>

                    <div class="col-6">
                        <label asp-for="Apellido"></label>
                        <input class="form-control" asp-for="Apellido">
                    </div>
                </div>

                <div class="form-grup mb-4 row">
                    <div class="col-6">
                        <label asp-for="Documento"></label>
                        <input class="form-control" asp-for="Documento">
                    </div>

                    <div class="col-6">
                        <label asp-for="CorreoElectronico"></label>
                        <input class="form-control" asp-for="CorreoElectronico">
                    </div>
                </div>

                <div class="form-grup mb-4 row">
                    <div class="col-6">
                        <label asp-for="Direccion"></label>
                        <input class="form-control" asp-for="Direccion">
                    </div>

                    <div class="col-6">
                        <label asp-for="Telefono"></label>
                        <input class="form-control" asp-for="Telefono">
                    </div>
                </div>

                <div class="form-grup mb-4 row">
                    <div class="col-6">
                        <label asp-for="FechaNacimiento">Fecha Nacimiento</label>
                        <input class="form-control" asp-for="FechaNacimiento">
                    </div>

                    <div class="col-6">
                        <label asp-for="TipoAfiliacion">Tipo Afiliacion</label>
                        <input class="form-control" asp-for="TipoAfiliacion">
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a class="btn btn-outline-dark shadow" asp-controller="" asp-action="">Atras</a>
                    <button class="btn btn-outline-dark shadow" type="submit">Guardar</button>
                </div>

            </div>
        </form>

        
    </div>
</div>