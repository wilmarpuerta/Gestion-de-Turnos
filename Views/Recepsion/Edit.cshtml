@{
    ViewData["Title"] = "Editar Usuario";
}
@model Usuario

<div class="container-fluid">
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col text-center p-4">
            <h1>Editar Usuario</h1>
        </div>
        <hr class="text-dark">
    </div>
</div>

<div class="container">
    <form asp-action="Edit" asp-controller="Recepsion" asp-route-id="@Model.Id" method="post">
        <div class="card col-8 mt-3 offset-2">
            <div class="card-body">
                <div class="form-grup mb-4 row">
                    <div class="col-6">
                        <label asp-for="Nombre"></label>
                        <input class="form-control" asp-for="Nombre" value="@Model.Nombre">
                    </div>

                    <div class="col-6">
                        <label asp-for="Apellido"></label>
                        <input class="form-control" asp-for="Apellido" value="@Model.Apellido">
                    </div>
                </div>

                <div class="form-grup mb-4 row">
                    <div class="col-6">
                        <label asp-for="Documento"></label>
                        <input class="form-control" asp-for="Documento" value="@Model.Documento">
                    </div>

                    <div class="col-6">
                        <label asp-for="CorreoElectronico"></label>
                        <input class="form-control" asp-for="CorreoElectronico" value="@Model.CorreoElectronico">
                    </div>
                </div>

                <div class="form-grup mb-4 row">
                    <div class="col-6">
                        <label asp-for="Direccion"></label>
                        <input class="form-control" asp-for="Direccion" value="@Model.Direccion">
                    </div>

                    <div class="col-6">
                        <label asp-for="Telefono"></label>
                        <input class="form-control" asp-for="Telefono" value="@Model.Telefono">
                    </div>
                </div>

                <div class="form-grup mb-4 row">
                    <div class="col-6">
                        <label asp-for="FechaNacimiento">Fecha Nacimiento</label>
                        <input class="form-control" asp-for="FechaNacimiento" type="date">
                    </div>

                    <div class="col-6">
                        <label asp-for="TipoAfiliacion">Tipo Afiliacion</label>
                        <select class="form-select" asp-for="TipoAfiliacion">
                            <option value="TipoAfiliacion"></option>
                            <option value="Cotizante">Cotizante</option>
                            <option value="Beneficiario">Beneficiario</option>
                            <option value="Subsidiado">Subsidiado</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-between col-8 mt-3 offset-2">
            <a class="btn btn-outline-dark shadow" asp-controller="Recepsion" asp-action="Index">Atras</a>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                data-bs-target="#ActualizarUsuario">Guardar</button>
        </div>
        <div class="modal fade" id="ActualizarUsuario" tabindex="-1" aria-labelledby="ActualizarUsuarioLabel"
            aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content d-flex justify-content-center m-3">
                    <div class="d-flex justify-content-center m-3">
                        <ion-icon class="icon-modal" name="checkmark-circle-outline"></ion-icon>
                    </div>
                    <div class="modal-body">
                        <p class="text-modal">Â¡Datos actualizados correctamente!</p>
                    </div>
                    <div class="d-flex justify-content-center m-3">
                        <button type="submit" class="btn btn-secondary" data-bs-dismiss="modal">Ok</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>

<style>
    .text-modal {
        text-align: center;
        font-size: 20px;
        color: #01d101;
    }

    .icon-modal {
        font-size: 80px;
        color: #01d101;
    }
</style>